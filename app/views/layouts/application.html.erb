<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag "application", "blueprint/screen" %>
  <%= stylesheet_link_tag "blueprint/print", :media => "print" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>">
        <%= value %>
      </div>
    <% end %>

    <%= yield %>

    <%= debug params if Rails.env.development? %>
  </div>
</body>
</html>
