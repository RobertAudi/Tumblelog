<%= form_for :session, :url => sessions_path do |f| %>
  <div class="field">
    <p><%= f.label :login, "Login" %></p>
    <p><%= f.text_field :login %></p>
  </div>
  
  <div class="field">
    <p><%= f.label :password, "Password" %></p>
    <p><%= f.password_field :password %></p>
  </div>
  
  <p><%= f.check_box :remember_me %>
     <%= f.label :remember_me, "Remember Me" %></p>
  
  <p class="button"><%= f.submit "Log in", :disable_with => 'Loging in...' %></p>
<% end %>
